@model EWareShop.Models.KhachHang

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thêm mới khách hàng</h2>

<div id="formthemkh">
    <form class="form-horizontal" asp-action="Create">
        <div class="form-group">
            <label asp-for="HoTenKhachHang" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="HoTenKhachHang" class="form-control" placeholder="Nhập tên khách hàng">
                <span asp-validation-for="HoTenKhachHang" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SoDienThoai" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="SoDienThoai" class="form-control" id="sodienthoai" placeholder="Nhập số điện thoại khách hàng">
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
            <div class="col-sm-2">
                <a  id="tim"  class="btn btn-default">Kiểm tra</a>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DiaChi" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ khách hàng">
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="Email" class="form-control" placeholder="Nhập email khách hàng">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-7">
                <input type="submit" value="Tiếp theo" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

@section KhachHang_Scripts
{
    <script>
        $(document).ready(function () {
            $('#tim').click(function () {
                $.ajax(
                    {
                        type: 'GET',
                        url: "/KhachHang/TimKiemKhachHang",
                        data: { "soDienThoai": $('#sodienthoai').val() },
                        success: function (rs) {
                            if (rs == 1)
                            {
                                alert("khách hàng đã tồn tại");
                                window.location.href = "/KhachHang/ChuyenTiep?sodienthoai=" + $('#sodienthoai').val();
                            }
                            else
                            {
                                alert("Khách hàng không tồn tại");
                            }
                        }
                    })
            });
        });
    </script>
}


