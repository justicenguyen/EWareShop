@model EWareShop.Models.KhachHang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var danhSachSanPhamDaMua = (List<EWareShop.Models.SanPhamBan>)ViewBag.danhSachSanPhamDaMua;
}

<div class="row">
    <div class="col-sm-8">
        <form asp-action="Edit">
            <div class="form-horizontal">
                <h4>Chỉnh sửa thông tin khách hàng</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="HoTenKhachHang" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="HoTenKhachHang" class="form-control" />
                        <span asp-validation-for="HoTenKhachHang" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="SoDienThoai" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="SoDienThoai" class="form-control" />
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DiaChi" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-9">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<hr />
<h2>Danh sách sản phẩm đã mua</h2>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped jambo_table bulk_action">
            <thead>
                <tr class="headings">
                    <th width="30%">Sản phẩm</th>
                    <th width="15%">Mã bảo hành</th>
                    <th width="15%">Ngày bán</th>
                    <th width="15%">Bảo hành(tháng)</th>
                    <th width="15%">Ngày hết bảo hành</th>
                    <th width="5%"> Sửa</th>
                    <th width="5%"> Xóa</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var spdm in danhSachSanPhamDaMua)
            {
                    <tr style="cursor:pointer;" class="even pointer">
                        <td class=" ">@spdm.TenSanPham</td>
                        <td class=" ">@spdm.MaBaoHanh</td>
                        <td class=" ">@spdm.NgayBan</td>
                        <td class=" ">@spdm.SoThangBaoHanh</td>
                        <td class=" ">@spdm.NgayHetBaoHanh</td>
                        <td class=""><a class="btn btn-primary btn-xs" asp-action="Edit" asp-route-id="@spdm.SanPhamBanID"><i class="fa fa-edit"></i>Sửa</a></td>
                        <td class=""><a class="btn btn-danger btn-xs" asp-action="Delete" onclick="return confirm('Bạn có chắc chắn xóa không ?')" asp-route-id="@spdm.SanPhamBanID"><i class="fa fa-trash-o"></i> Xóa</a></td>
                    </tr>
                }

            </tbody>
        </table>    
    </div>
</div>
<div>
    <a asp-action="Index">Trở lại</a>
</div>

